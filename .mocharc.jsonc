/*
 * Mocha Tests Configuration
 */

{
  "diff": true,
  "extension": ["ts"],
  "spec": ["tests/**/*.ts"],
  "package": "./package.json",
  "reporter": "spec",
  "slow": "75",
  "timeout": "60000",
  "exit": true,
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm"
  ],
  "exclude": [
    "src/modules/ChromeSettingsStorage.ts",
    "src/modules/BrowserUiWindow.ts"
  ]
}
